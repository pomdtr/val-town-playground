{
  "name": "vt-playground",
  "type": "module",
  "version": "0.0.6",
  "author": "Achille Lacoin",
  "description": "A playground component for Val Town",
  "exports": {
    ".": {
      "import": "./lib/main.js"
    },
    "./react": {
      "import": "./lib/react.js"
    }
  },
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rimraf dist/* lib/*",
    "build:ts": "tsc && cp src/*.css lib/",
    "build:js": "esbuild --format=esm --bundle --loader:.css=copy --outfile=dist/vt-playground.js src/main.ts",
    "build:css": "postcss -r \"./dist/*.css\" \"./lib/*.css\"",
    "build": "npm run clean && npm run build:ts && npm run build:js && npm run build:css",
    "test": "echo \"Error: no test specified\" && exit 1",
    "release": "npm run build && npm publish"
  },
  "license": "MIT",
  "files": [
    "sandbox.ts",
    "dist",
    "lib"
  ],
  "dependencies": {
    "@codemirror/lang-javascript": "^6.2.2",
    "@lit/react": "^1.0.3",
    "codemirror": "^6.0.1",
    "lit": "^3.1.0",
    "stringify-object": "^5.0.0"
  },
  "devDependencies": {
    "@types/stringify-object": "^4.0.5",
    "esbuild": "^0.19.4",
    "postcss": "^8.4.31",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.12",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2"
  }
}
